<!doctype html>
<html lang="en">
    <!-- Header -->
    <%- include('../partials/header.ejs') %>

  <body>
    <!-- Navigation -->
    <%- include('partials/anavbar.ejs') %>

    <section class="dashboard">
    </section>

    <div class="container">
        <div>
            <div id="signupalert" style="<%if(!rows || !rows.data.message){%> display:none <%}%>" class="alert alert-danger">
                <% if (rows || rows.data.message){%>
                <span><%=rows.data.message%></span>
                <%}%>
            </div> 

            <!-- just to make scrolling effect possible -->
                <h2 class="myH2" id="article-list">My articles</h2>

            <!-- list newest articles -->
            <% 
            if (rows && rows.data) {
                var iIndex = 0;
                while (iIndex < rows.data.length) { %> 
                <p class="myP">
                    <div class="card bg-light mb-6">
                        <div class="card-header">Posted: <%= rows.data[iIndex].created_at %></div>
                        <div class="card-body">
                        <h4 class="card-title"><a href="/articles/<%= rows.data[iIndex].id%>"><%= rows.data[iIndex].title %></a></h4>
                        <h5 class="card-text"><%= rows.data[iIndex].perex %></h5>
                        </div>
                    </div>
                </p>                         
            <%        iIndex++; 
                } %>
            <%  } %>
        </div>
    </div>
    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>
</body>
</html>