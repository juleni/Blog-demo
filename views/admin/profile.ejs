<!doctype html>
<html lang="en">
    <!-- Header -->
    <%- include('../partials/header.ejs') %>

  <body>
    <!-- Navigation -->
    <%- include('partials/anavbar.ejs') %>

    <section class="dashboard">
    </section>

    <div class="container">
        <div>
            <!-- just to make scrolling effect possible -->
            <h2 class="myH2" id="article-list">My Profile</h2>

            <form id="updateuserform" class="form-horizontal" role="form" method="POST" action="/users/<%= rows.userModel.id %>">
                
                
                <div id="updateuseralert" style="<%if(!rows || !rows.message){%> display:none <%}%>" class="alert alert-danger">
                    <% if (rows || rows.message) { %>
                    <span><%= rows.message %></span>
                    <%}%>
                </div>

                <div class="form-group">
                    <label for="firstname" class="col-md-4 control-label">First Name</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" name="firstname" value="<%= rows.userModel.firstName %>" placeholder="First Name">
                    </div>
                </div>

                <div class="form-group">
                    <label for="lastname" class="col-md-4 control-label">Last Name</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" name="lastname" value="<%= rows.userModel.lastName %>" placeholder="Last Name">
                    </div>
                </div>

                <div class="form-group">
                    <label for="email" class="col-md-4 control-label">Email</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" name="email" value="<%= rows.userModel.email %>" placeholder="Email Address">
                    </div>
                </div>
                    
                <div class="form-group">
                    <label for="password" class="col-md-4 control-label">Password</label>
                    <div class="col-md-12">
                        <input type="password" class="form-control" name="passwd" placeholder="Password">
                    </div>
                </div>

                <div class="form-group">
                    <label for="repassword" class="col-md-4 control-label">Re-Type</label>
                    <div class="col-md-12">
                        <input type="password" class="form-control" name="repasswd" placeholder="Re-Type Password">
                    </div>
                </div>

                <div class="form-group">
                    <label for="profileinfo" class="col-md-4 control-label">Profile information</label>
                    <div class="col-md-12">
                        <textarea class="form-control" placeholder="Write profile info" id="profileinfo" style="height: 100px"
                                  name="profileinfo" value="<%= rows.userModel.profileInfol %>"></textarea>
                    </div>
                </div>

                <div style="margin-top:10px" class="form-group">
                    <!-- Button -->

                    <div class="col-sm-12 controls">
                      <input id="btn-signup" type="submit" class="btn btn-danger" value="Update Profile" />

                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>
</body>
</html>